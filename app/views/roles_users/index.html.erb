<h1>Listing roles_users</h1>

<table>
  <tr>
    <th>User</th>
    <th>Role</th>
  </tr>

<% @roles_users.each do |roles_users| %>
  <tr>
    <td><%=h roles_users.user_id %></td>
    <td><%=h roles_users.role_id %></td>
    <td><%= link_to 'Edit', edit_roles_user_path(roles_users) %></td>
    <td><%= link_to 'Destroy', roles_users, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

