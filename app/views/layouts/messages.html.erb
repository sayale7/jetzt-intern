<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
        <title><% if current_user %>
            <%= current_user.username %>
            im Jetzt<% end %>
        </title>
        <%= stylesheet_link_tag 'style' %>
		<%= javascript_include_tag 'jquery-1.3.2', 'jquery.tokeninput' %>
        <%= yield(:head) %>
    </head>
    <body>
        <div id="page">
            <div id="header">
            </div>
            <div id="nav">
            </div>
            <div id="main">
                <div id="sidebar-wrapper">
                    <% if current_user %>
                    <div id="sidebar">
                    </div>
                    <% end %>
                    <%= render :partial => "layouts/user_nav_bottom1" %>
                </div>
                <div id="right">
                </div>
                <div id="content-wrapper">
                    <div id="content">
                        <% if current_user %>
                        <%= yield %>
                        <% end %>
                    </div>
                </div>
            </div>
            <div style="clear:both">
            </div>
        </div>
    </body>
    <div id="footer-wrapper">
        <div id="footer">
        </div>
    </div>
</html>
