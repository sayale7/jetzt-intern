<% title @page.name, false %>
<div class="pages">
    <%= simple_format @page.content %>
</div>
<br/>
<% if current_user.has_role? :admin %>
<p>
    <%= link_to "Edit", edit_page_path(@page) %>|<%= link_to "Destroy", @page, :confirm => 'Are you sure?', :method => :delete %>|<% if @page.inactive %>
    <%= link_to "Aktivieren", :controller => "pages", :action => "set_active", :id => @page.id %>
    <% else %>
    <%= link_to "Deaktivieren", :controller => "pages", :action => "set_inactive", :id => @page.id %>
    <% end %>
</p>
<% end %>