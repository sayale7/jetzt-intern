<% content_for :head do %>
  <%= include_tiny_mce_if_needed %>
<% end %>

<% title "Edit Page" %>

<% form_for @page do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
<p>
	<%= f.text_area :content, :class => 'mceEditor' %>
</p>

  <p><%= f.submit "Submit" %></p>

<% end %>
